{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/mainPage.css") }}">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" integrity="sha512-nMNlpuaDPrqlEls3IX/Q56H36qvBASwb3ipuo3MxeWbsQB1881ox0cRv7UPTgBlriqoynt35KjEwgGUeUXIPnw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.full.min.js" integrity="sha512-RtZU3AyMVArmHLiW0suEZ9McadTdegwbgtiQl5Qqo9kunkVg1ofwueXD8/8wv3Af8jkME3DDe3yLfR8HSJfT2g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}
{% block body %}
    <div class="container">
        <table>
            <tr class="tr-head">
                <td style="margin-right:900px;" class="unwrap">
                    <select class="chosen">
                        <option>Все магазины</option>
                        {% for shop in shops %}
                            <option class="shop-select" id="{{ shop.id }}">{{ shop.shopName }}</option>
                        {% endfor %}
                    </select>
                    <button class="select-confirm">Перейти</button>
                </td>
                <td style="margin-left: 0; position: fixed; font-family: MainFont,serif; font-size: 65px; color: #173f33">Овощебаза</td>
                <td class="login-info">Личный кабинет</td>
            </tr>
            <tr style="position: relative; display: flex; margin-top: 98px; margin-left: -22px">
                <td>
                    <div class="container-add">
                        <input type="radio" name="position" checked />
                        <input type="radio" name="position" />
                        <input type="radio" name="position" />
                        <main id="carousel">
                            {% if shops is defined %}
                                {% for shop in shops %}
                                    <div class="item" id="{{ shop.id }}">
                                        <img style="max-height: 200px; margin-top: 40px" src="imgs/pngwing.com{{ shop.id }}.png">
                                        <label class="shop-title-name">{{ shop.shopName }}</label>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </main>

                    </div>
                </td>
            </tr>
        </table>
    </div>
    <script type="module" src="{{ asset("js/mainPage.js") }}"></script>
    <script type="module" src="{{ asset("js/ajaxShops.js") }}"></script>
{% endblock %}
